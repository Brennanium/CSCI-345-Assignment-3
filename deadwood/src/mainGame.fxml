<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: #F2BF92;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mainGameController">
   <children>
      <VBox alignment="CENTER">
         <children>
            <HBox fx:id="mainBG" minHeight="100.0" minWidth="200.0" />
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <SplitMenuButton fx:id="moveSplitMenuButton" mnemonicParsing="false" text="Move">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                      <MenuItem mnemonicParsing="false" text="Action 2" />
                    </items>
                  </SplitMenuButton>
                  <Button fx:id="workButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="27.0" prefWidth="72.0" text="Work" />
                  <Button fx:id="actButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="27.0" prefWidth="72.0" text="Act" />
                  <Button fx:id="rehearseButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="27.0" prefWidth="72.0" text="Rehearse" />
                  <Button fx:id="upgradeButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="27.0" prefWidth="72.0" text="Upgrade" />
                  <Button fx:id="endTurnButton" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="27.0" prefWidth="72.0" text="End Turn" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
